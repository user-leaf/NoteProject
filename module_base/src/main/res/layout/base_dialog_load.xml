<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavLoad"
        android:layout_width="@dimen/base42dp"
        android:layout_height="@dimen/base42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvLoading"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/appColor"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_fileName="animators/progress_loading.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base10dp"
        android:text="@string/all_loading"
        android:textColor="@color/text_color_99"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/base10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lavLoad" />

</androidx.constraintlayout.widget.ConstraintLayout>